<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.nytimesapp.model.ResultsItem" />

        <variable
            name="click"
            type="com.nytimesapp.ui.interfaces.Callback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{()->click.onDetails(thumbnail, item)}"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/thumbnail"
                setImageUrl="@{item}"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                android:transitionName="small_image"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="repeat" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toStartOf="@+id/arrow"
                android:layout_toEndOf="@+id/thumbnail"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@{item.title}"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                tools:text="@string/dummy" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toStartOf="@+id/arrow"
                android:layout_toEndOf="@+id/thumbnail"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@{item.byline}"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12sdp"
                tools:text="@string/dummy" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subTitle"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toEndOf="@+id/thumbnail"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxWidth="@dimen/_120sdp"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@{item.source}"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                tools:text="@string/dummy" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                setDateFormat="@{item.updated}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subTitle"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toStartOf="@+id/arrow"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp"
                tools:text="2022-01-19" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_below="@+id/subTitle"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_toStartOf="@+id/date"
                app:srcCompat="@drawable/ic_calender" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_arrow_right" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>